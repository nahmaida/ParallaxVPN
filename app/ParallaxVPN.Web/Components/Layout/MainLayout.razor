@inherits LayoutComponentBase

<div class="theme-wrapper" data-theme="@CurrentTheme">
    <div class="page">
        <Navbar CurrentTheme="@CurrentTheme" OnThemeToggle="ToggleTheme" />
        <main>
            @Body
        </main>
        <Footer />
    </div>
</div>

@code {
    private string CurrentTheme { get; set; } = "dark-tech";

    private void ToggleTheme()
    {
        CurrentTheme = CurrentTheme == "dark-tech" ? "minimal" : "dark-tech";
    }
}